<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h1 class="teal-text">Account Profile</h1>
    <p class="gray-text">Be a part of the Startup.Push community and fill out your profile!</p>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well aqua-bkgd">
      <h2 class="form-header"><strong>Create Your Profile</strong></h2><br />
      <%= form_for @profile, url: user_profile_path do |f| %>
      
        <div class="field form-group">
          <%= f.label :first_name, class: 'gray-text' %>
          <em class="gray-text">(required)</em>
          <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
        </div>
        
        <div class="field form-group">
          <%= f.label :last_name, class: 'gray-text' %>
          <em class="gray-text">(required)</em>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        
        <div class="field form-group">
          <%= f.label :job_title, class: 'gray-text' %>
          <em class="gray-text">(required)</em>
          <%= f.select :job_title, ['Developer', 'Entrepreneur', 'Investor'], {}, class: 'form-control' %>
        </div>
        
        <div class="field form-group">
          <%= f.label :phone_number, class: 'gray-text' %>
          <%= f.telephone_field :phone_number, class: 'form-control' %>
        </div>
        
        <div class="field form-group">
          <%= f.label :contact_email, class: 'gray-text' %>
          <em class="gray-text">(required)</em>
          <%= f.email_field :contact_email, class: 'form-control' %>
        </div>
        
        <div class="field form-group">
          <%= f.label :description, class: 'gray-text' %>
          <%= f.text_area :description, class: 'form-control' %>
        </div><br />
        
        <div class="actions form-group">
          <%= f.submit 'Create Profile', class: 'btn btn-default' %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>