<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well aqua-bkgd">
      <h3 class="form-header"><strong>Get in touch with us!</strong></h3>
      <%= form_for @contact do |f| %>
        <div class="form-group">
          <%= f.label :name, class: 'gray-text' %>
          <em class="gray-text">(required)</em>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, class: 'gray-text' %>
          <em class="gray-text">(required)</em>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :comments, class: 'gray-text' %>
          <%= f.text_area :comments, class: 'form-control' %>
        </div>
        <%= f.submit 'Send Message', class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>