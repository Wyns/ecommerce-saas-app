<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well aqua-bkgd">
      <h2 class="form-header"><strong>Get in touch with us!</strong></h2><br />
      <%= form_for @contact do |f| %>
      
        <div class="field form-group">
          <%= f.label :name, class: 'gray-text' %>
          <em class="gray-text">(required)</em>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        
        <div class="field form-group">
          <%= f.label :email, class: 'gray-text' %>
          <em class="gray-text">(required)</em>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        
        <div class="field form-group">
          <%= f.label :comments, class: 'gray-text' %>
          <%= f.text_area :comments, class: 'form-control' %>
        </div><br />
        
        <div class="actions form-group">
          <%= f.submit 'Send Message', class: 'btn btn-default' %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>