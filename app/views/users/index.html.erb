<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="teal-text text-center">Startup.Push Community Members</h1>
    <p class="gray-text">Welcome to the Startup.Push community. Members must fill out a profile in order to be visible in the community.</p>
    <ul class="list-unstyled">
      <% @users.each do |user| %>
        <% if user.profile %>
          <li>
            <div class="well row <%= cycle('aqua-bkgd aqua-well-link', 'well-link') %>">
              <div class="col-sm-4 text-center">
                <%= link_to user do %>
                  <%= image_tag user.profile.avatar.url(:square), class: 'profile-index-img' %>
                <% end %>
              </div>
              <div>
                <%= link_to user do %>
                  <h2 class="index-name"><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                <% end %> 
                <% if user.plan_id == 2 %>
                  <span class="badge index-badge">PRO</span>
                <% end %>
                <h4 class="index-job-title gray-text"><%= user.profile.job_title %></h4>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>