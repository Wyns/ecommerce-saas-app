<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <ul class="list-unstyled">
      <% @users.each do |user| %>
        <% if user.profile %>
          <li>
            <div class="well row <%= cycle('aqua-bkgd aqua-well-link', 'well-link') %>">
              <div class="col-sm-4 text-center">
                <%= link_to user do %>
                  <%= image_tag user.profile.avatar.url(:square), class: 'profile-index-img' %>
                <% end %>
              </div>
              <div>
                <%= link_to user do %>
                  <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                <% end %>
                <h4 class="gray-text"><%= user.profile.job_title %></h4>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>