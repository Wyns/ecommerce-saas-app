<%= devise_error_messages! %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2 class="form-header gray-text">Change Your Password</h2><br />
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
      
        <div class="field form-group">
          <%= f.label :password, "New password", class: 'gray-text' %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %>
        </div>
      
        <div class="field form-group">
          <%= f.label :password_confirmation, "Confirm new password", class: 'gray-text' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
      
        <div class="actions form-group">
          <%= f.submit "Change My Password", class: 'btn btn-default btn-block' %>
        </div>
      <% end %>
      
      <div class="well-link"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>
