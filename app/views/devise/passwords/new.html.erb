<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <h2 class="form-header gray-text">Forgot your password?</h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
      
        <div class="field form-group">
          <%= f.label :email, class: 'gray-text' %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
      
        <div class="actions form-group">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-default' %>
        </div>
      <% end %>
      
      <div class="well-link"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>