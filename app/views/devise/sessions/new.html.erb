<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <h2 class="form-header">Log In</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.label :email, class: 'gray-text' %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
      
        <div class="field form-group">
          <%= f.label :password, class: 'gray-text' %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
      
        <% if devise_mapping.rememberable? -%>
          <div class="field form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: 'gray-text' %>
          </div>
        <% end -%>
      
        <div class="actions form-group">
          <%= f.submit "Log in", class: 'btn btn-default' %>
        </div>
      <% end %>

      <div class="well-link"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>
