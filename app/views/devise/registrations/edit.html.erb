<%= devise_error_messages! %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h1 class="teal-text">Account Log In</h1>
    <p class="gray-text">Make changes to your account, email or password used for log in.</p>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well aqua-bkgd">
      <h2 class="form-header"><strong>Edit Account Log In</strong></h2><br />

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      
        <div class="field form-group">
          <%= f.label :email, class: 'gray-text' %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      
        <div class="field form-group">
          <%= f.label "New password", class: 'gray-text' %> 
          <em class="gray-text">(leave blank if you don't want to change it)</em>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
      
        <div class="field form-group">
          <%= f.label "New password confirmation", class: 'gray-text' %>
          <em class="gray-text">(re-enter new password)</em>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
        
        <br /><h4 class="white-text"><em>Confirm Changes</em></h4>
        <p><em class="white-text">Your current password is needed to confirm your changes above.</em></p>
      
        <div class="field form-group">
          <%= f.label :current_password, class: 'gray-text' %>
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
        </div><br />
      
        <div class="actions form-group">
          <%= f.submit "Update", class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
    <%= link_to "Back", :back, class: 'back-link' %>
  </div>
</div>
<br />
<br />
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well well-link">
      <h3 class="text-center gray-text">Cancel My Account</h3><br />
      <p class="gray-text text-center">
        Very sorry to see you go, but you can cancel your account here.
      </p>
      <div class="actions form-group">
        <%= button_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure you want to cancel your account? All account and profile information will be deleted." }, method: :delete, class: 'btn btn-default btn-block gray-text' %>
      </div>
      <br/>
    </div>
    <%= link_to "Back", :back, class: 'back-link' %><br /><br /><br />
  </div>
</div>
